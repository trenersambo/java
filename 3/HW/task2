import java.util.ArrayList;

public class Main {
    public static void main(String[] args) {
        ArrayList<Integer> numbers = new ArrayList<Integer>();
        numbers.add(10);
        numbers.add(20);
        numbers.add(30);
        numbers.add(40);
        numbers.add(50);
        
        int sum = 0;
        int min = numbers.get(0);
        int max = numbers.get(0);
        
        for(int i = 0; i < numbers.size(); i++) {
            int num = numbers.get(i);
            sum += num;
            
            if(num < min) {
                min = num;
            }
            
            if(num > max) {
                max = num;
            }
        }
        
        double average = (double) sum / numbers.size();
        
        System.out.println("Минимальное число: " + min);
        System.out.println("Максимальное число: " + max);
        System.out.println("Среднее арифметическое: " + average);
    }
}






// создается список numbers с несколькими целочисленными элементами
// цикл for, чтобы найти минимальное и максимальное число, а также вычислить сумму всех чисел в списке
//Среднее арифметическое вычисляется
// езультаты выводятся на консоль